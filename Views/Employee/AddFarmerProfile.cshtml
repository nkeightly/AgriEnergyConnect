@model IEnumerable<FarmerProfile>
@{
    ViewData["Title"] = "Add Farmer Profile";
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Add Farmer Profile</title>
    <link rel="stylesheet" href="~/css/dashboardEmployee.css">
</head>
<body>
    <div class="container">
        <h1>Add Farmer Profile</h1>
        <div class="grid">
            @foreach (var farmer in Model)
            {
                <div class="lozenge" onclick="showEditForm(@farmer.Id)">
                    <img src="@farmer.ImagePath" alt="@farmer.Name" class="profile-img">
                    <span>@farmer.Name</span>
                </div>
            }
        </div>
    </div>
</body>
</html>

<script>
    function showEditForm(farmerId) {
        window.location.href = '/Employee/EditFarmerProfile/' + farmerId;
    }
</script>
